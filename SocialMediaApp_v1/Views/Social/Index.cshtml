@model IEnumerable<SocialMediaApp_v1.Models.SocialMediaPost>

@{
    ViewData["Title"] = "SocialSpace";
}

<div class="container mt-5">
    <div class="card mb-4">
        <div class="card-header">
            <h2>Create a Post</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="CreatePost" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="postTitle">Title</label>
                    <input type="text" class="form-control" id="postTitle" name="PostTitle" required>
                </div>
                <div class="form-group">
                    <label for="postCaption">Caption</label>
                    <textarea class="form-control" id="postCaption" name="PostCaption" rows="3" required></textarea>
                </div>
                <p>Author: @User.Identity.Name</p>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>

